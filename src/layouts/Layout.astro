    display: flex;
    min-height: 100vh;
  }
  @media (max-width: 640px) {
    .container {
      display: block;
    }
  }

  main {
    flex: 1;
    order: 1;
    justify-content: space-between;
  }
  @media (max-width: 640px) {
    main {
      order: 1;
    }
  }

  aside {
    order: 2;
    width: 18%;
    padding: var(--asidePaddingTop) 20px 20px;
    /* background-color: #444b58; */
		border: 1px solid #d8d8d8;
		position: sticky;
		top: 0;
		height: 100vh;
  }
  @media (max-width: 640px) {
    aside {
      order: 2;
      width: 100%;
      padding: 40px 20px 20px;
			height: auto;
    }
  }

  div.cover {
  }
  div.cover img {
    display: block;
    width: 100%;
    height: 20vh;
    object-fit: cover;
    object-position: center 60%;
  }

  div.content {
    padding: 20px 40px;
  }
  @media (max-width: 640px) {
    div.content {
      padding: 0 18px;
    }
  }

  header {
    padding: 100px 24px 100px;
		/* background: hsl(221, 53%, 56%); */
